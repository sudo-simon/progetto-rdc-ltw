<!DOCTYPE html>
<html lang="it">

    <head>
        <title>Profilo</title>
        <!-- CSS Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <!-- CSS Locale -->
        <link rel="stylesheet" href="css/navbar.css">
        <link rel="stylesheet" href="css/post.css">
        <link rel="stylesheet" href="css/profile.css">
        <link rel="stylesheet" href="css/profile-dark.css" title="default">
        <link rel="alternate stylesheet" href="css/profile-light.css" title="alternate">
        <link rel="stylesheet" href="css/smallChat.css" type="text/css" />
    </head>

    <body>
        <!-- qui viene inserita la NAVBAR mediante lo script jQuery in navbar.js -->
        <div class="container h-100" id="profile">
            <div class="row h-100">
                <div class="col-lg colonna-sx" style="background-color: dimgrey">
                    <div class="row">
                        <!-- Immagine del profilo -->
                        <div class="col" id="propic_col">
                            <img class="propic img-thumbnail" id="profile_pic" src="" alt="profile_picture"> <!-- src inserito con js -->
                        </div>
                        <!-- Informazioni -->
                        <div class="col">
                            <div class="info" id="profile_points">
                                <h4 id="name"><!-- inserito con js --></h4>
                                <li class="profile_stats" id="date">Iscritto dal: <!-- inserito con js --></li>
                                <li class="profile_stats" id="friends">Seguiti: <!-- inserito con js --></li>
                                <li class="profile_stats" id="vote">CFU: <!-- inserito con js --></li>
                            </div>
                            <!-- qui apparirÃ  il BOTTONE AGGIUNGI agli amici mediante lo script jQuery in "add-friend.js" -->
                        </div>
                    </div>
                    <hr>
                    <!-- Descrizione -->
                    <div class="descrizione">
                        <h3>Descrizione</h3>
                        <p id="description">
                            <!-- inserito con js -->
                        </p>
                    </div>
                </div>
                <!-- Colonna di destra -->
                <div class="col-lg-7 colonna-dx" style="background-color: darkred">
                    <div class="post" id="post">
                        <!-- form nuovo post -->
                        <div class="nuovo p-4 rounded-3 shadow" id="newPostToP">
                            <form id="formNuovoPost">
                                <textarea class="form-control" id="testo_post" name="testo_post" placeholder="Crea nuovo post"></textarea>
                                <hr>
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <input type="text" class="form-control" id="youtube_url" placeholder="YouTube URL">
                                    <input class="form-control ricerca-file" id="formFile" name="formFile" type="file" accept=".jpg, .jpeg, .png, .mp3, .mp4">
                                    <input class="form-control" id="driveFileName" type="text" value="" style="display: none;" disabled readonly>
                                    <button type="button" class="btn btn-outline-secondary rounded-0" id="driveFile" onclick="showPickerDialog()">Upload da Drive</button>
                                    <!-- TODO:mostrare su due righe -->
                                </div>
                            </form>
                            <br>
                            <button onclick="addPost()" class="btn btn-outline-secondary rounded-0">Pubblica</button>
                        </div>
                        <!-- qui appariranno i POST mediante lo script jQuery in "posts.js" -->
                    </div>
                </div>
            </div>
        </div>

        <!-- SCRIPT -->
        <!-- Script Firebase -->
        <script src="https://www.gstatic.com/firebasejs/8.5.0/firebase-app.js"></script>
        <script src="https://www.gstatic.com/firebasejs/8.5.0/firebase-auth.js"></script>
        <script src="https://www.gstatic.com/firebasejs/8.5.0/firebase-firestore.js"></script>
            <!-- Locale -->
            <script type="text/javascript" src="js/firebase-config.js"></script>
        <!-- Script Bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
        <!-- Script JQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <!-- Script Locali -->
        <script type="text/javascript" src="js/status-auth.js"></script>
        <script type="text/javascript" src="js/navbar.js"></script>
        <script type="text/javascript" src="js/styleswitcher.js"></script>
        <script type="text/javascript" src="js/profile.js"></script>
        <!-- Script Google -->
        <script type="text/javascript" src="https://apis.google.com/js/api.js"></script>
        <script type="text/javascript" src="js/google-drive.js"></script>
        <!-- <script type="text/javascript" src="js/posts.js"></script> -->
        <script type="text/javascript" src="js/profile-feed.js"></script>
        <script type="text/javascript" src="js/smallChat.js"></script>
        <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>
    </body>

</html>